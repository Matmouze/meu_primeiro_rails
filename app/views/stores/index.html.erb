<p>Lista de Lojas do Shopping</p>
<table border="10px" style="width: 50%">
	<tr>
		<td>Nome</td>
		<td>Alterar</td>
		<td>Remover</td>
	</tr>

<% @store.each do |b| %>

	<tr>
		<td><%= link_to b.name, store_showOne_path(b.id)%></td>
		<td><%= link_to 'Alterar', store_edit_path(b.id) %></td>                                       
		<td><%= link_to 'Deletar', store_destroy_path(b.id), :method => 'delete' %></td>
	</tr>
<% end %>
	<tr>
		<td colspan="3"><%= link_to 'Adicionar uma Loja a este Shopping', stores_new_path %></td>
	</tr>

</table>